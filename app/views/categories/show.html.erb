<h1 class='text-center'><%= "Category: " + @category.name %></h1>

<div class='text-center'>
  <% if logged_in? && current_user.admin? %>
    <div class='row'>
      <span class='badge custome-badge'>
        <%= link_to 'Edit category', edit_category_path(@category) %>
      </span>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>
<div style='padding-top:20px;'>
  <%= render 'articles/article', obj: @category_articles %>
</div>
<div class='text-center'>
  <%= will_paginate @category_articles %>
</div>