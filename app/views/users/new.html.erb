<h1 class='text-center'>Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %> <!-- passing @article as an object to errors partial -->

<div class='row'>
  <div class='col-sm-12'>
    <%= form_for @user, :html => { class: 'form-horizontal', role: 'form' } do |f| %>
      <div class='form-group'>
        <%= f.label :username, class: "col-sm-2 control-label" %>
        <div class='col-sm-8'>
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
        </div>
      </div>
      
      <div class='form-group'>
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class='col-sm-8'>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
      </div>
          
      <div class='form-group'>
        <%= f.label :password, class: "col-sm-2 control-label" %>
        <div class='col-sm-8'>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
    
      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-8'>
          <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg-custom' %>
        </div>
      </div>
    <% end %>
    <div class='col-sm-6 col-sm-offset-4'>
      [ <%= link_to 'Cancel and return to article listing', articles_path %> ]
    </div>
  </div>
</div>
